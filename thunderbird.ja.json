        "url": "https://www.mozilla.org/ja/thunderbird/all/",
        "re": "thunderbird-([\\d.]+)-SSL&os=win&lang=ja"
    },
    "autoupdate": {
        "url": "https://download.mozilla.org/?product=thunderbird-$version-SSL&os=win&lang=ja#/thunderbird-setup.exe",
        "hash": {
            "find": "([a-fA-F0-9]{128})\\s+(?:win32/ja/Thunderbird Setup ([\\d.]+).exe)",
