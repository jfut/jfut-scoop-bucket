{
    "homepage": "https://www.mozilla.org/ja/thunderbird/",
    "version": "60.3.0",
    "url": "https://download.mozilla.org/?product=thunderbird-60.3.0-SSL&os=win&lang=ja#/thunderbird-setup.exe",
    "hash": "sha512:e570fbd88681fdcbe73f2ec64796544f1ab3d92b77ce34ede5ed96d7a4f58a32dbd47ce1572628f5746433a9c891e78daffa0f6e92b56f851909ecee7a990392",
    "bin": "thunderbird.exe",
    "shortcuts": [
        [
            "thunderbird.exe",
            "Mozilla Thunderbird"
        ]
    ],
    "pre_install": "echo \"[Install]`nInstallDirectoryPath=$dir`nQuickLaunchShortcut=false`nDesktopShortcut=false`nStartMenuShortcuts=false\" | sc \"$dir\\install.ini\"",
    "installer": {
        "file": "thunderbird-setup.exe",
        "args": "/INI=$dir\\install.ini"
    },
    "uninstaller": {
        "file": "uninstall\\helper.exe",
        "args": "/S"
    },
    "checkver": {
        "url": "https://www.mozilla.org/ja/thunderbird/all/",
        "re": "thunderbird-([\\d.]+)-SSL&os=win&lang=ja"
    },
    "autoupdate": {
        "url": "https://download.mozilla.org/?product=thunderbird-$version-SSL&os=win&lang=ja#/thunderbird-setup.exe",
        "hash": {
            "find": "([a-fA-F0-9]{128})\\s+(?:win32/ja/Thunderbird Setup ([\\d.]+).exe)",
            "url": "https://download-installer.cdn.mozilla.net/pub/thunderbird/releases/$version/SHA512SUMS"
        }
    }
}
