    "depends": "lessmsi",
    "pre_install": "Start-Process -FilePath \"$dir\\setup.exe\" -ArgumentList \"/s /x /b`\"$dir`\" /v`\"/qn`\"\" -Wait",
    "installer": {
        "script": [
            "$extracted = \"$dir\\extracted\"",
            "",
            "# Require lessmsi",
            "$default_use_lessmsi = get_config MSIEXTRACT_USE_LESSMSI",
            "set_config MSIEXTRACT_USE_LESSMSI $True",
            "",
            "# This .msi installer does not support changing TARGETDIR and INSTALLDIR properties.",
            "Expand-MsiArchive \"$dir\\TextPad 8.msi\" \"$extracted\"",
            "movedir \"$extracted\\program files\\TextPad 8\" \"$dir\"",
            "",
            "# Restore config",
            "set_config MSIEXTRACT_USE_LESSMSI $default_use_lessmsi",
            "",
            "# Remove unused files",
            "Remove-Item \"$extracted\" -Recurse",
            "Remove-Item \"$dir\\TextPad 8.msi\"",
            "Remove-Item \"$dir\\setup.exe\"",
            ""
        ]
    },
    "bin": "TextPad.exe",
    "shortcuts": [
        [
            "TextPad.exe",
            "TextPad"
        ]
    ],
    "checkver": {
        "url": "https://www.textpad.com/support/relnotes.html",
        "re": "<h5>TextPad ([\\d.]+) \\("
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://textpad.com/download/v$majorVersion$minorVersion/x64/txpeng$cleanVersion-64.zip"
            },
            "32bit": {
                "url": "https://textpad.com/download/v$majorVersion$minorVersion/win32/txpeng$cleanVersion-32.zip"
