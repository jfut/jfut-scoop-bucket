        "$regpath = 'HKCU:\\Software\\Pon\\'",
        "if (-not (Test-Path \"$regpath\")) { New-Item -Path \"$regpath\" | Out-Null }",
        "$regpath = 'HKCU:\\Software\\Pon\\Explzh\\'",
